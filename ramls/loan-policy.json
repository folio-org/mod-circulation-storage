{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "loanable": {
      "type": "boolean"
    },
    "loansPolicy": {
      "type": "object",
      "properties": {
        "profileId": {
          "type": "string"
        },
        "period": {
          "type": "object",
          "$ref": "period.json"
        },
        "closedLibraryDueDateManagementId": {
          "type": "string"
        },
        "existingRequestsPeriod": {
          "type": "object",
          "$ref": "period.json"
        },
        "gracePeriod": {
          "type": "object",
          "$ref": "period.json"
        },
        "openingTimeOffset": {
          "type": "object",
          "$ref": "period.json"
        },
        "fixedDueDateScheduleId": {
          "type": "string"
        }
      }
    },
    "renewable": {
      "type": "boolean"
    },
    "renewalsPolicy": {
      "type": "object",
      "properties": {
        "unlimited": {
          "type": "boolean"
        },
        "numberAllowed": {
          "type": "number"
        },
        "renewFromId": {
          "type": "string"
        },
        "differentPeriod": {
          "type": "boolean"
        },
        "period": {
          "type": "object",
          "$ref": "period.json"
        },
        "alternateFixedDueDateScheduleId": {
          "type": "string"
        }
      }
    },
    "metadata": {
      "$ref": "raml-util/schemas/metadata.schema",
      "readonly": true
    }
  },
  "additionalProperties": false,
  "required": [
    "name",
    "loanable",
    "renewable"
  ]
}
