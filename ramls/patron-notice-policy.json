                ]
              },
              "sendWhen": {
                "type": "string",
                "description": "User initiated and time driven events for request related notices",
                "enum": [
                  "Recall request",
                  "Recall loanee",
                  "Hold request",
                  "Paging request",
                  "Available",
                  "Hold Expiration",
                  "Request cancellation"
                ]
              },
              "sendBy": {
                "type": "object",
                "additionalProperties": false,
                "description": "Send by options",
                "properties": {
                  "duration": {
                    "type": "integer",
